/* pages/visitor/index.wxss */
.login-container {
  position: relative;
  margin: 0 auto;
  width: 650rpx;
  text-align: center;
  animation: btn 0.8s ease-in-out;
}
@keyframes btn {
  from{
      transform: scale(0);
  }            
  to{
      transform: scale(1);
  }
}
.login-message {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 150rpx;
  font-weight: bold;
  line-height: 150rpx;
  letter-spacing: 25rpx;
  position: absolute;
  top: 50rpx;
  color: #ffffff;
  transform: rotate(9deg);
  transform-origin: 12% 60%;
  animation: rotateMessage 4s ease-in-out infinite;
}
.login-message span {
  cursor: pointer;
  text-shadow: 0px 0px 2px #686868,
    0px 1px 1px #ddd,
    0px 2px 1px #d6d6d6,
    0px 3px 1px #ccc,
    0px 4px 1px #c5c5c5,
    0px 5px 1px #c1c1c1,
    0px 6px 1px #bbb,
    0px 7px 1px #777,
    0px 8px 3px rgba(100, 100, 100, 0.4),
    0px 9px 5px rgba(100, 100, 100, 0.1),
    0px 10px 7px rgba(100, 100, 100, 0.15),
    0px 11px 9px rgba(100, 100, 100, 0.2),
    0px 12px 11px rgba(100, 100, 100, 0.25),
    0px 13px 15px rgba(100, 100, 100, 0.3);
  transition: all .1s linear;
}
@keyframes rotateMessage {
  0% {}
  25% {
    transform: rotate(6deg);
  }
  50% {
    transform: rotate(9deg);
  }
  75% {
    transform: rotate(6deg);
  }
  100% {
    transform: rotate(9deg);
  }
}

